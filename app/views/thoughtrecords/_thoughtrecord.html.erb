
<% if format == 'row' %>
  <div class="panel panel-default">
    <div class="panel-body">
      <% if thoughtrecord.creator == current_user %>
        <span class="pull-right">
          [ <%= link_to 'edit this record', edit_thoughtrecord_path(thoughtrecord) %> ]
        </span>
      <% end %>
      <dl class="dl-horizontal">
        <dt>Date/Time:</dt>
        <dd><%= easy_datetime(thoughtrecord.created_at) %></dd>
        <dt>Situation:</dt>
        <dd><%= thoughtrecord.situation %></dd>
        <dt>Feelings:</dt>
        <dd><%= thoughtrecord.feelings %></dd>
        <dt>Unhelpful Thoughts:</dt>
        <dd><%= thoughtrecord.unhelpfulthoughts %></dd>
        <dt>Supporting Facts:</dt>
        <dd><%= thoughtrecord.supportingfacts %></dd>
        <dt>Disproving Facts:</dt>
        <dd><%= thoughtrecord.disprovingfacts %></dd>
        <dt>Alternative Perspective:</dt>
        <dd><%= thoughtrecord.altperspective %></dd>
        <dt>Outcome:</dt>
        <dd><%= thoughtrecord.outcome %></dd>
      </dl>
    </div>
  </div>
<% else %>
<div class="container-fluid">
      <tr>
        <td><%= easy_datetime(thoughtrecord.created_at) %><br><br><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> <%= link_to 'edit this record', edit_thoughtrecord_path(thoughtrecord) %></td>
        <td><%= thoughtrecord.situation %></td>
        <td><%= thoughtrecord.feelings %></td>
        <td><%= thoughtrecord.unhelpfulthoughts %></td>
        <td><%= thoughtrecord.supportingfacts %></td>
        <td><%= thoughtrecord.disprovingfacts %></td>
        <td><%= thoughtrecord.altperspective %></td>
        <td><%= thoughtrecord.outcome %></td>
      </tr>
      </div>
<% end %>
