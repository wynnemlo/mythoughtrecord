<div class="navbar-header">
  <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
    <span class="sr-only">Toggle navigation</span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
  </button>
  <%= link_to(root_path, class: "navbar-brand") do %>
      <span class="brand-my">my</span>
      <span class="brand-thought">thought</span>
      <span class="brand-record">record</span>
  <% end %>
</div>
<div id="navbar" class="navbar-collapse collapse">
  <ul class="nav navbar-nav">
    <li><%= link_to "About", about_path %></li>
    <li><%= link_to "FAQ", '#' %></li>
    <li><%= link_to "Contact", '#' %></li>
  </ul>

  <!-- sign in form -->
  <%= form_tag '/login', :class => 'navbar-form navbar-right', :id => 'signinform' do %>
    <div class="form-group">
      <%= text_field_tag :username, params[:username] || '', class: 'form-control', 'placeholder' => 'Email' %>
    </div>
    <div class="form-group">
      <%= password_field_tag :password, params[:password] || '', class: 'form-control', 'placeholder' => 'Password' %>
    </div>
    <%= submit_tag "Sign in", class: 'btn btn-success' %>
    <%= link_to(register_path, class: 'btn btn-primary') do %>
      Register
    <% end %>
  <% end %>


</div><!--/.navbar-collapse -->